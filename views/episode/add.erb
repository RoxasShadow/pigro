<%  @title = 'Add episode' %>
<%= erb :'template/header' %>

<% if defined? @error %>
  <div class="alert alert-danger"><%= @error %></div>
<% elsif defined? @success %>
  <div class="alert alert-success"><%= @success %></div>
<% elsif defined? @shows %>
  <form action="<%= @current_url %>" method="post" role="form">
    <h2><%= @title %></h2>

    <select name="name">
      <% @shows.each { |show| %>
        <option value="<%= show.name %>"><%= show.name %></option>
      <% } %>
    </select><br>

    <%= csrf_tag %>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="go">Add</button>
  </form>
<% else %>
  <form action="<%= @current_url %>" method="post" role="form">
    <h2><%= @title %></h2>
    
    <input type="text"     placeholder="<%= @show.name %>"                class="form-control" required autofocus readonly                                                             ><br>
    <input type="number"   placeholder="episode"           name="episode" class="form-control" required                    value="<%= Episode.last_episode(@show.name) + 1 %>"><br>

    <input type="checkbox" name="translation" data-label="Translation"><br>
    <input type="checkbox" name="editing"     data-label="Editing"    ><br>
    <input type="checkbox" name="typesetting" data-label="Typesetting"><br>
    <input type="checkbox" name="encoding"    data-label="Encoding"   ><br>
    <input type="checkbox" name="checking"    data-label="Checking"   ><br>
    <input type="checkbox" name="timing"      data-label="Timing"     ><br>
    <input type="checkbox" name="qchecking"   data-label="QC"         ><br>

    <%= csrf_tag %>
    <input  type="hidden" name="name" value="<%= @show.name %>">
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="add">Add</button>
  </form>
<% end %>

<%= erb :'template/footer' %>